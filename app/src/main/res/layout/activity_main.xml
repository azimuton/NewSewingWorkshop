<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.example.newsewingworkshop.MainViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#574831"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="177dp"
        android:layout_height="212dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#833131"
        android:drawableTop="@drawable/sdfff"
        android:fontFamily="@font/dserasercyr1"
        android:paddingTop="30dp"
        android:text="Формулы"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="normal"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#F4F0F0"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="138dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#505988"
        android:drawableBottom="@drawable/templatessss"
        android:fontFamily="@font/dserasercyr1"
        android:paddingBottom="15dp"
        android:text="Шаблоны"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#ECD50E"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="256dp"
        android:backgroundTint="#4F6536"
        android:drawableTop="@drawable/dhdrr"
        android:fontFamily="@font/dserasercyr1"
        android:text="Справочник"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_marginBaseline="4dp"
        app:strokeColor="#ED3C04"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="177dp"
        android:layout_height="341dp"
        android:backgroundTint="#AC9654"
        android:drawableBottom="@drawable/clients"
        android:fontFamily="@font/dserasercyr1"
        android:paddingBottom="25dp"
        android:text="Клиенты"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/button"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:strokeColor="#5E0BF1"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#0BB6A6"
        android:drawableRight="@drawable/calendar"
        android:fontFamily="@font/dserasercyr1"
        android:paddingRight="30dp"
        android:text="календарь \t\nзаказов"
        android:textSize="26sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button6"
        app:layout_constraintStart_toStartOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        app:strokeColor="#0E0902"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="162dp"
        android:backgroundTint="#56309A"
        android:drawableBottom="@drawable/calculator"
        android:fontFamily="@font/dserasercyr1"
        android:paddingBottom="15dp"
        android:text="Расчет ткани"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/button3"
        app:layout_constraintStart_toStartOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        app:strokeColor="#56F35C"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>